{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "*": ["*", "node_modules/*"]
      }
    },
    "include": [
      "*.ts",
      "**/*.ts",
      "config/**/*.ts",
      "controllers/**/*.ts",
      "middlewares/**/*.ts",
      "models/**/*.ts",
      "routes/**/*.ts"
    ],
    "exclude": ["node_modules", "dist"]
  }